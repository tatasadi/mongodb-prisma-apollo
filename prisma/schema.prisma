datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model sessions {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  referenceId Int        @unique
  title       String
  description String?
  startsAt    String?
  endsAt      String?
  room        String?
  day         String?
  format      String?
  track       String?
  level       String?
  speakerIDs  String[]   @db.ObjectId
  speakers    speakers[] @relation(fields: [speakerIDs], references: [id])
}

model speakers {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  referenceId String     @unique
  bio         String?
  name        String?
  sessionIDs  String[]   @db.ObjectId
  sessions    sessions[] @relation(fields: [sessionIDs], references: [id])
}
